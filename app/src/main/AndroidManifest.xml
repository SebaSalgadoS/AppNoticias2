<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ejecicioappnoticiasconrecyclerview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EjecicioAppNoticiasConRecyclerView"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".NavigationDrawerView"
            android:exported="false" />
        <activity
            android:name=".HomeNoticias"
            android:exported="false" />
        <activity
            android:name=".view.usuario.Registro"
            android:exported="false" />
        <activity
            android:name=".view.usuario.Login"
            android:exported="false" />
        <activity
            android:name=".Idiomas"
            android:exported="false" />
        <activity
            android:name=".Categorias"
            android:exported="false" />
        <activity
            android:name=".view.NoticiaView"
            android:exported="false" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>